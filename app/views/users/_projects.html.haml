- if mentor?(@user)
  = render :partial => "projects_mentored", :locals => { :user => @user, :open => false }
- if !user.project_proposals.empty?
  = render :partial => "projects_proposed", :locals => {:user => @user, :open => false }
- else
  %br
  %h3
    Haven't proposed any projects  
- if student?(@user)
  = render :partial => "project_student", :locals => {:user => @user, :open => false }
- if student?(@user) && can_view_user_proposal_list?(@user)
  = render :partial => "student_proposals", :locals => {:user => @user, :open => false }      
