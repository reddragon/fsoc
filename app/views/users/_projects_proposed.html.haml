= javascript_include_tag :defaults

%div{:id => "projects_proposed"}
  %br
  - if open
    %h3
      = link_to_remote image_tag('spindown-open.gif'), :update => "projects_proposed", :url => {:action => "toggle_tab", :open => false, :partial => "projects_proposed", :user_id => user.id}
      = link_to_remote "Projects proposed by #{user.login}", :update => "projects_proposed", :url => {:action => "toggle_tab", :open => false, :partial => "projects_proposed", :user_id => user.id}
      %table{:id => "hor-minimalist-a"}
        %tr
          %th
            Name
          %th
            Mentor
          %th
            &nbsp;  
            
        - user.project_proposals.each do |project|
          %tr
            %td
              = link_to project.name, project
            %td
              = project.mentor ? link_to_user(project.mentor): "Nobody"
            %td
              - if can_edit_project?(project)
                = link_to 'Edit', edit_project_path(project) 
              = ' | ' if can_edit_project?(project) && can_delete_project?(project)
              - if can_delete_project?(project) 
                = link_to 'Delete', project, :confirm => 'Are you sure?', :method => :delete 
  - else
    %h3
      = link_to_remote image_tag('spindown-closed.gif'), :update => "projects_proposed", :url => {:action => "toggle_tab", :open => true, :partial => "projects_proposed", :user_id => user.id}
      = link_to_remote "Projects proposed by #{user.login}", :update => "projects_proposed", :url => {:action => "toggle_tab", :open => true, :partial => "projects_proposed", :user_id => user.id}
  

