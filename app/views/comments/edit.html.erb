<div class="post">
<h2 class="title">Edit Comment for <%=h @comment.project.name %></h2>
<p class="meta"><span class="date">&nbsp;</span></p>
<div style="clear: both;">&nbsp;</div>
<div class="entry">
	
	
<% form_for @comment, :url => project_comment_path do |f|  %>
  <%= f.error_messages %>
  
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :project_id, :value => @comment.project.id %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

	
<br/>
  <p class="links">
    <%= link_to 'Back to Discuss', project_comments_path(@comment.project) %> |
    <%= link_to 'Back to Project', project_path(@comment.project) %>
  </p>
</div>
</div>
