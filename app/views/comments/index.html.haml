= javascript_include_tag :defaults

.post
  %h2.title
    Comments on 
    =h @project.name
  %p.meta
    %span.date &nbsp;
  %div{:style => 'clear: both;'} &nbsp;
  
  - if @comments.empty?
    %b No comments posted yet
  - else
    %table{:id => 'hor-minimalist-a'}
      - @comments.each do |comment|
        %tr
          %th
            - user = comment.user
            = link_to_user user
            %small
              Last Edited
              = distance_of_time_in_words(comment.updated_at, Time.now, true)
              back
            .rightfloat
              %small
                %b
                  Comment
                  = comment.id
        
        %tr
          %td
            = display_message_content(comment.content)
            %small
              - if can_edit_comment?(comment)
                = link_to_remote 'Edit', :update => "comment_space#{comment.id}", :url => {:action => 'inpage_edit', :id => comment.id, :project_id => @project.id}
                |
              - if can_delete_comment?(comment)
                = link_to 'Delete', project_comment_path(@project, comment), :confirm => 'Are you sure?', :method => :delete
                |
              = link_to_remote 'Reply', {:update => "comment_space", :url => {:action => 'inpage_new', :project_id => @project.id, :reply_to_id => comment.id}, :with => "'comment_content=' + $('comment_content').value"}
              %div{:id => "comment_space#{comment.id}"}
        
  - if logged_in?
    %div{:id => 'comment_space'}
      = render :partial => "new", :locals => {:comment => @form_comment}
  
  %p.links
    - if logged_in?
      = link_to 'Back to Project', project_path(@project)

