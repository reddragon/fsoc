<div class="post">
	<h2 class="title">Task for <%=h @task.project.name %></h2>
	<p class="meta"><span class="date">&nbsp;</span></p>
	<div style="clear: both;">&nbsp;</div>
	<div class="entry">
    <p>
      <b>Title :</b>
      <%=h @task.title %>
    </p>
    <p>
      <b>Description :</b><br />
      <%=h @task.description %>
    </p>
     <p>
      <b>Estimated time :</b>
      <%=h @task.eta %> days
    </p>      
     <p>
      <b>Task Author :</b>
      <%= link_to_user @task.author %>
    </p>   
	<p class="links">
	  <% if can_edit_task?(@task) %>
  	  <%= link_to 'Edit this task', edit_project_task_path %> | 
  	<% end %>
	  <%= link_to 'Back to project', project_path(@task.project) %>
	</p>
	</div>
</div>
