= javascript_include_tag :defaults

%div{:id => "tasks" }
  - if @tasks.empty?
    %h3
      Empty Tasks List
  - else
    - if open
      %h3
        = link_to_remote image_tag('spindown-open.gif'), :update => "tasks", :url => {:action => "show_tasks", :open => false, :project_id => @project.id }
        = link_to_remote "Hide Atomic Tasks for #{@project.name}", :update => "tasks", :url => {:action => "show_tasks", :open => false, :project_id => @project.id }
        %br
        %br
        = render :partial => "tasks/list", :locals => { :project => @project, :tasks => @tasks }
    - else
      %h3
        = link_to_remote image_tag('spindown-closed.gif'), :update => "tasks", :url => {:action => "show_tasks", :open => true, :project_id => @project.id }
        = link_to_remote "See Atomic Tasks for #{@project.name}", :update => "tasks", :url => {:action => "show_tasks", :open => true, :project_id => @project.id }
    
    
