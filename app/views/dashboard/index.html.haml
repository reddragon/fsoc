- if !logged_in?     
  .post
    %h2.title
      Welcome to FSoC
    %p.meta
      %span.date &nbsp;
    %div{:style => 'clear: both'} &nbsp;
    .entry       
      %h3 Hi and welcome to FSoC
      %p.links
        = link_to 'Login', login_path
        or 
        = link_to 'Signup', signup_path
        to get started.

- else
  %div{:id => "dashboard_content"}
    = render :partial => @partial, :locals => @locals
  
      
    
