.post
  %h2.title
    - if !logged_in?
      Welcome to FSoC
    - else
      =h current_user.user_type.capitalize
      Dashboard
  %p.meta
    %span.date &nbsp;
  %div{:style => 'clear: both'} &nbsp;
  .entry
        
    - if !logged_in?
      %h3 Hi and welcome to FSoC
      %p.links
        = link_to 'Login', login_path
        or 
        = link_to 'Signup', signup_path
        to get started.
    - else
      %div{:id => 'dashboard_content'}
        - if admin?
          %h3
            FSoC Settings
          %br
          %h3
            Program
          %table{:id => 'hor-minimalist-a'}
            %tr
              %th
                Setting
              %th
                Value
              %th  
            %tr
              %td
                Name
              %td
                = APP_CONFIG['program']['name']
              %td
                - # Edit
            %tr
              %td
                Name Abbreviation
              %td
                = APP_CONFIG['program']['name_abbreviation']
              %td
                - # Edit
            %tr
              %td
                Year
              %td
                = APP_CONFIG['program']['year']
              %td
                - # Edit    
                        
          %br
          %h3
            Admin
          %table{:id => 'hor-minimalist-a'}
            %tr
              %th
                Setting
              %th
                Value
              %th  
            %tr
              %td
                Name
              %td
                = APP_CONFIG['admin']['name']
              %td
                - # Edit
            %tr
              %td
                Designation
              %td
                = APP_CONFIG['admin']['designation']
              %td
                - # Edit
                
          %br
          %h3
            FSoC
          %table{:id => 'hor-minimalist-a'}
            %tr
              %th
                Setting
              %th
                Value
              %th  
            %tr
              %td
                Mode
              %td
                = APP_CONFIG['fsoc']['mode']
              %td
                - # Edit      
          
            
        - if mentor?(current_user)
          - if !current_user.project_mentorships.empty?
            %h3
              Projects mentored by
              =h current_user.login
            
            %table{:id => "hor-minimalist-a"}
              %tr
                %th
                  Name
                %th
                  Proposed by
                %th
                  &nbsp;  
              - current_user.project_mentorships.each do |project|      
                %tr
                  %td
                    = link_to project.name, project
                  %td
                    = link_to_user project.proposer
                  %td
                    - if can_edit_project?(project)
                      = link_to 'Edit', edit_project_path(project)
                    = ' | ' if can_edit_project?(project) && can_delete_project?(project)
                    - if can_delete_project?(project)
                      = link_to 'Delete', project, :confirm => 'Are you sure?', :method => :delete
          - else
            %h3
              Not mentoring any projects.            
        
        - if student?(current_user)
          %br
          - if current_user.project
            %h3 
              =h current_user.login
              is student for the project
            %table{:id => "hor-minimalist-a"}
              %tr
                %th
                  Name
                %th
                  Mentor
              %tr
                %td
                  = link_to current_user.project.name, current_user.project
                %td  
                  = current_user.project.mentor ? link_to_user(current_user.project.mentor): "Nobody"        
                %td
                  - if can_edit_project?(current_user.project)
                    = link_to 'Edit', edit_project_path(current_user.project)
                  = ' | ' if can_edit_project?(current_user.project) && can_delete_project?(current_user.project)
                  - if can_delete_project?(current_user.project)
                    = link_to 'Delete', current_user.project, :confirm => 'Are you sure?', :method => :delete  
                               
          - else
            %h3
              Not a student for any projects                  
      %p.links
        - if !admin?
          = link_to 'My Projects', :controller => "dashboard"
          &nbsp;|&nbsp;
          = link_to 'My Proposals', :controller => "dashboard", :action => "proposals"
          &nbsp;|&nbsp;
          = link_to 'Project Task Status', :controller => "dashboard", :action => "task_status"
        - if admin?
          - if can_configure?
            = link_to 'Configure', :controller => "dashboard", :action => "configure"
            &nbsp;|&nbsp;
          = link_to 'Certificates', :controller => "dashboard", :action => "certificates"

