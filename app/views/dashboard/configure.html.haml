.post
  %h2.title
    Configure
  %p.meta
    %span.date &nbsp;
  %div{:style => 'clear: both'} &nbsp;
  .entry

%h3
  FSoC is currently in
  = APP_CONFIG['fsocmode']
  mode
  %br
%br
%br
  - if APP_CONFIG['fsocmode'] == "Summer Coding"
    - form_tag :action => "set_timeframes" do
      %h3
        Project Creation Timeframe
      %table{:id => 'hor-minimalist-a'}
        %tr
          %th
            From  
          %th
            To
        %tr
          %td
            = select_date APP_CONFIG["pct_from"], :prefix => "pct_from"
          %td
            = select_date APP_CONFIG["pct_to"], :prefix => "pct_to"         
      %br
      %h3
        Proposal Submission Timeframe
      %table{:id => 'hor-minimalist-a'}
        %tr
          %th
            From  
          %th
            To
        %tr
          %td
            = select_date APP_CONFIG["pst_from"], :prefix => "pst_from"
          %td
            = select_date APP_CONFIG["pst_to"], :prefix => "pst_to" 
      
      %br
      %h3
        Proposal Acceptance Timeframe
      %table{:id => 'hor-minimalist-a'}
        %tr
          %th
            From  
          %th
            To
        %tr
          %td
            = select_date APP_CONFIG["pat_from"], :prefix => "pat_from"
          %td
            = select_date APP_CONFIG["pat_to"], :prefix => "pat_to" 
      %br
      
      %h3
        Coding Starts Date
      %table{:id => 'hor-minimalist-a'}
        %tr
          %th
            On  
        %tr
          %td
            = select_date APP_CONFIG["csd_on"], :prefix => "csd_on"
      
      %br
      %h3
        Mid-Term Evaluation Timeframe
      %table{:id => 'hor-minimalist-a'}
        %tr
          %th
            From  
          %th
            To
        %tr
          %td
            = select_date APP_CONFIG["met_from"], :prefix => "met_from"
          %td
            = select_date Date.today, :prefix => "met_to" 
      
      %br
      %h3
        Coding Ends Date
      %table{:id => 'hor-minimalist-a'}
        %tr
          %th
            On
        %tr
          %td
            = select_date APP_CONFIG["ced_on"], :prefix => "ced_on"
      %br
      %h3
        Final Evaluation Timeframe
      %table{:id => 'hor-minimalist-a'}
        %tr
          %th
            From  
          %th
            To
        %tr
          %td
            = select_date APP_CONFIG["fet_from"], :prefix => "fet_from"
          %td
            = select_date APP_CONFIG["fet_to"], :prefix => "fet_to" 
      %br
      = submit_tag  'Set Timeframes' 
      
%p.links
  = link_to 'My Projects', :controller => "dashboard"
  &nbsp;|&nbsp;
  = link_to 'My Proposals', :controller => "dashboard", :action => "proposals"
  &nbsp;|&nbsp;
  = link_to 'Task Status', :controller => "dashboard", :action => "task_status"
  - if admin?
    &nbsp;|&nbsp;
    = link_to 'Configure', :controller => "dashboard", :action => "configure"
