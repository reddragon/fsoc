.post
  %h2.title
    Code Repository
  %p.meta
    %span.date &nbsp;
  %div{:style => 'clear: both;'} &nbsp;
  .entry 
    - if can_edit_proposal?(@proposal)
      - form_tag ({:action => "set_code_repository", :id => @proposal.id}) do
        %b
          Repository Link (eg. http://www.google.com):
        %br
        = text_field_tag "repository_link", @proposal.repository_link
        %br
        %br
        = submit_tag 'Set Repository'
    
