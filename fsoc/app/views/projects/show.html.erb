<div class="post">
	<h2 class="title"><%=h @project.name %></h2>
	<p class="meta"><span class="date">&nbsp;</span></p>
	<div style="clear: both;">&nbsp;</div>
	<div class="entry">

<p>
  <b>Project Definition:</b>
  <br />
  <%=h @project.definition %>
</p>

<p>
  <b>URLs:</b>
  <br />
  <% @project.urls.split(',').each do |link| %>
    <%= link_to link, link, :popup => true -%><br />
  <% end %>
  
</p>

<p>
  <b>Proposed by:</b> <%=h @project.proposer.login %>
</p>

<p>
  <b>Estimated Time (in days):</b> <%=h @project.eta %>
</p>

		<p class="links">
		  <%= link_to 'Edit', edit_project_path(@project) %> |
      <%= link_to 'Back', projects_path %>
    </p>
		
	</div>
</div>
