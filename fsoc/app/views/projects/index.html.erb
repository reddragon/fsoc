<div class="post">
	<h2 class="title">Listing projects</h2>
	<p class="meta"><span class="date">&nbsp;</span></p>
	<div style="clear: both;">&nbsp;</div>
	<div class="entry">
<% if @projects %>
		<table id="hor-minimalist-a">
      <tr>
        <th>Name</th>
        <th>Proposed by</th>
        <th>Mentor</th>
        <th>Estimated Time <br />(in days)</th>
      </tr>

    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %>
        <td><%=h project.proposer.login %></td>
        <td><%=h project.mentor ? project.mentor.login: "Nobody" %></td>
        <td><%=h project.eta %></td>
        <td>
        <% if can_edit_project?(project) %>
          <%= link_to 'Edit', edit_project_path(project) %>
        <% end %>
        <%= ' | ' if can_edit_project?(project) && can_delete_project?(project) %>
        <% if can_delete_project?(project) %>
        <%= link_to 'Delete', project, :confirm => 'Are you sure?', :method => :delete %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% else %>
  <h3>No projects listed.</h3>
<% end %>
  <% if logged_in? %>
		<p class="links"><%= link_to 'New project', new_project_path %></p>
	<% else %>
	  <p class="links"><%= link_to 'Login', login_path %> or <%= link_to 'Signup', signup_path %> to add projects.</p>
  <% end %>		
	</div>
</div>
